<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="tda593.hotel.california.integration">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <properties>
            <!-- Use DerbyDB -->
            <property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect"/>

            <!-- DerbyDB in in-memory mode -->
            <property name="hibernate.connection.url" value="jdbc:derby:memory:hotel-californiaDB;create=true"/>

            <!-- username/password not needed for in-memory -->
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>

            <!-- Set to true to print all queries executed -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>

            <!-- Create and drop db each time -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
        </properties>
    </persistence-unit>
</persistence>